@using RSToolKit.WebUI.Models.Views.Register;
@model AudiencesView
@{
    Layout = "~/Views/Shared/_L_AdminRegister.cshtml";
}

@section pageNumber
{
    @Model.PageNumber
}
@section shoppingCart
{
    @Model.ShoppingCart
}
@section header
{
    @Model.Header
}
@section footer
{
    @Model.Footer
}
@section styles
{
    @Model.Styles
}
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            var audience = null;
            $('.btn-audience').on('click', function () {
                audience = true;
                $('#Audience').val($(this).attr('data-value'));
                $('#registerForm').submit();
            });

        });
    </script>
}
<div style="position: fixed; top: 0; left: 0; width: 100%; background-color: rgba(0, 0, 0, .5); color: #fc3333; font-size: 14pt;" class="text-center">Admin Registration</div>
@using (Html.BeginForm("Audience", "AdminRegister", FormMethod.Post, new { id = "registerForm" }))
{
    @Model.HiddenInputs
    <div class="form-panel row">
        <div class="col-xs-12">
            <div class="row form-panel-row">
                <div class="col-xs-12 form-component form-free-text">
                    @Model.Notice
                </div>
            </div>
        </div>
    </div>
    @Model.Audiences
    <div class="row form-btn-panel">
        <div class="col-xs-12">
            <div class="row">
                <!--Button Nav Back-->
                @if (Model.PreviousPage != 0)
                {
                    <div class="col-sm-4 col-md-3 col-lg-2 form-btn">
                        <a class="btn-rs btn-navigation" href="@Url.Action("Page", "AdminRegister", new { id = Model.RegistrantId, page = Model.PreviousPage })">
                            Back
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}
