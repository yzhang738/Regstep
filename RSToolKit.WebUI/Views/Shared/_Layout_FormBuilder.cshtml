@using RSToolKit.WebUI.Controllers;
@{
    ViewBag.Title = "FormBuilder - RegStep";
    Layout = "~/Views/Shared/_Layout_Tool.cshtml";
    var editors = (List<Editor>)ViewBag.Editors;
}
@section styles
{
    <link href="~/Content/Bootstrap/colorpicker.min.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/bootstrap-datetimepicker-custom.min.css" rel="stylesheet" />
    <link href="~/Content/FormBuilder/Layout.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
}
@section scripts
{
    <script src="~/Scripts/Moment/moment.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/Bootstrap/Plugins/DateTime%20Picker/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/Bootstrap/Plugins/1%20colorpicker-color.min.js"></script>
    <script src="~/Scripts/Bootstrap/Plugins/2%20colorpicker.min.js"></script>
    <script src="~/Scripts/jQuery/Plugins/sortable.js"></script>
    <script src="~/Scripts/jQuery/Plugins/disableSelect.js"></script>
    @RenderSection("scripts", required: false)
}
@section modals
{
    @RenderSection("modals", required: false)
}
<!--Page Title-->
<div class="row add-padding-bottom" id="pageTitle">
    <div class="col-sm-6">
        <h2 class="text-color-1">
            @RenderSection("title", required: false)
        </h2>
        <div class="editors">
            <div class="editors-info">
                @((editors.Count - 1) > 0 ? (editors.Count - 1) + " others currently editing." : "No other editors")
            </div>
            @foreach (var editor in editors.Where(e => e.UserKey != ((User)ViewBag.User).UId).ToList())
            {
                <div class="editor">
                    @editor.Name
                </div>
            }
        </div>
    </div>
    @Html.Partial("P_Help_View")
</div>
<!--End Page Title-->
<!--Breadcrumb-->
<div id="breadcrumb" class="row add-padding-vertical-5 add-border-vertical border-color-grey-2">
    <div class="col-xs-12">
        @RenderSection("breadcrumbs", required: false)
    </div>
</div>
<!--End Breadcrumb-->
<!--Work Area-->
<div class="row add-padding-vertical">
    @RenderBody()
</div>
<!--End Work Area-->


