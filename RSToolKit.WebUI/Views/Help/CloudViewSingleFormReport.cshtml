@{
    Layout = "~/Views/Shared/_Layout_Help_Cloud.cshtml";
}
@section scripts {
    <script>
        $(function () {
            $("#popover-page-records").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Page Records',
                content: function () {
                    return $('#popover-page-records-content').html();
                }
            });
            $("#popover-view").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Full Page View',
                content: function () {
                    return $('#popover-view-content').html();
                }
            });
            $("#popover-download").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Download',
                content: function () {
                    return $('#popover-download-content').html();
                }
            });
            $("#popover-edit").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Edit Report',
                content: function () {
                    return $('#popover-edit-content').html();
                }
            });
            $("#popover-data").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Registration Data',
                content: function () {
                    return $('#popover-data-content').html();
                }
            });
            $("#popover-data-edit").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Edit Registration Data',
                content: function () {
                    return $('#popover-data-edit-content').html();
                }
            });
        });
    </script>
}

<div class="add-padding-vertical-5 add-border-bottom">
    <div class="help-breadcrumb">
        <a href="~/Help/Cloud">Cloud</a> <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span>
        <a href="~/Help/CloudFormReports">Registration Report List</a> <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span>
        <a href="~/Help/CloudFormReport">View Registration Report</a> <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span>
        <a href="~/Help/CloudSingleFormReports">Custom Report List</a> <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span>
        <a href="~/Help/CloudSingleFormReport">Edit Custom Report</a> &mdash; View Custom Report <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span>
        <a href="~/Help/CloudRegistrant">Manage Registration</a>
    </div>
</div>

<div class="add-padding-top help-text">
    <h2 class="add-padding-bottom-5">
        View Custom Report
    </h2>
    <p>
        View the report full screen or download the report.
    </p>
    <p>
        Click on <a class="text-color-2" href="~/Help/CloudSingleFormReport">Edit Report</a> to adjust the report filters and fields.
    </p>
    <p>
        For Roster reports, click on any confirmation number to view the <a class="text-color-2" href="~/Help/CloudRegistrant">Manage Registration</a> page for that record.
    </p>
    <p>
        Click <span class="glyphicon glyphicon-info-sign text-color-1"></span> below for more details.
    </p>
</div>

