@{
    Layout = "~/Views/Shared/_Layout_Help_Cloud.cshtml";
}
@section scripts {
    <script>
        $(function () {
            $("#popover-page-records").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Page Records',
                content: function () {
                    return $('#popover-page-records-content').html();
                }
            });
            $("#popover-form-type").popover({
                html: true,
                placement: 'top',
                title: 'Form Status',
                trigger: 'focus',
                content: function () {
                    return $('#popover-form-type-content').html();
                }
            });
            $("#popover-records").popover({
                html: true,
                placement: 'top',
                title: 'Available Forms',
                trigger: 'focus',
                content: function () {
                    return $('#popover-records-content').html();
                }
            });
        });
    </script>
}

<div class="add-padding-vertical-5 add-border-bottom">
    <div class="help-breadcrumb">
        <a href="~/Help/Cloud">Cloud</a> <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span>
        Registration Report List <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span>
        <a href="~/Help/CloudFormReport">View Registration Report</a>
    </div>
</div>

<div class="add-padding-top help-text">
    <h2 class="add-padding-bottom-5">
        Registration Reports
    </h2>
    <p>
        Every form in your account is listed here. Use the Form Type dropdown to filter the list by Form Status.
    </p>
    <p>
        Click on the form name to access the <a class="text-color-2" href="~/Help/CloudFormReport">Registration Report</a>.
    </p>
    <p>
        Click <span class="glyphicon glyphicon-info-sign text-color-1"></span> below for more details.
    </p>
</div>

<div class="add-padding-vertical-2em">
    <div class="screen-shot">
        <div class="screen-shot-text screen-shot-header">
            User Interface
        </div>
        <div class="screen-shot-body">
            <!--UI Markup-->
            <div class="container-fluid color-white add-padding-vertical">
                <div class="row">
                    <div class="col-xs-12">

                        <!--Page Title-->
                        <div class="row add-padding-bottom" id="page-title">
                            <div class="col-sm-6">
                                <h2 class="text-color-1">
                                    Available Forms
                                </h2>
                            </div>
                            <div class="col-sm-6 text-align-right">
                                <div class="btn-group btn-group-help">
                                    <button type="button" class="btn btn-default btn-help dropdown-toggle" data-toggle="dropdown">
                                        Help & Training <span class="caret"></span>
                                    </button>
                                </div>
                            </div>

                        </div>
                        <!--End Page Title-->
                        <!--Breadcrumb-->
                        <div id="breadcrumb" class="row add-padding-vertical-5 add-border-vertical border-color-grey-2">
                            <div class="col-xs-12">
                                <a>Cloud Dashboard</a> <span class="glyphicon glyphicon-chevron-right"></span>
                                Registration Reports
                            </div>
                        </div>
                        <!--End Breadcrumb-->
                        <!--Work Area-->
                        <div class="row add-padding-vertical">
                            <div class="col-xs-12">
                                <!--Form Options-->
                                <div class="add-padding-bottom-5 text-medium text-color-2">
                                    Report Options
                                </div>
                                <div class="row add-padding-vertical-5 color-grey-2">

                                    <div class="col-sm-6 col-md-3 col-lg-2">
                                        <div class="add-padding-vertical-5">
                                            <label class="control-label">Form Status:</label> <a tabindex="0" id="popover-form-type" class="help-info help-info-rsred"><span class="glyphicon glyphicon-info-sign"></span></a>
                                            <select class="form-control input-sm">
                                                <option>All</option>
                                                <option>Development</option>
                                                <option>Ready</option>
                                                <option>Active</option>
                                                <option>Maintenance
                                                <option>Closed</option>
                                                <option>Complete</option>
                                                <option>Payment Complete</option>
                                                <option>Archived</option>
                                            </select>
                                        </div>
                                        <div id="popover-form-type-content" style="display: none;">
                                            <p>
                                                Use this dropdown to filter out available forms by status. Form status is set in the FormBuilder tool. Available status types are:
                                            </p>
                                            <p>
                                                <b>Pre-Launch</b>: Development, Ready
                                            </p>
                                            <p>
                                                <b>Active</b>: Active, Maintenance
                                            </p>
                                            <b>Post Event</b>: Closed, Complete, Payment Complete, Archive
                                        </div>
                                    </div>
                                    <div class="clearfix visible-sm-block"></div>
                                    <div class="col-sm-6 col-md-3 col-md-offset-3 col-lg-2 col-lg-offset-6">
                                        <div class="add-padding-vertical-5">
                                            <label class="control-label">Records Per Page:</label> <a tabindex="0" id="popover-page-records" class="help-info help-info-rsred"><span class="glyphicon glyphicon-info-sign"></span></a>
                                            <input type="text" class="form-control input-sm" data-form-validation="number" value="25" />
                                        </div>
                                        <div id="popover-page-records-content" style="display: none;">
                                            Enter the number of records you wish to display and then click outside of the input to change the number of records per page. Use the Page arrows to advance page by page or use the dropdown to select a specific page.
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-3 col-lg-2">
                                        <div class="add-padding-vertical-5">
                                            <label class="control-label">Page:</label>
                                            <div class="input-group input-group-sm">
                                                <div class="input-group-addon cursor-pointer"><span class="glyphicon glyphicon-arrow-left"></span></div>
                                                <select class="form-control input-sm">
                                                    <option value="1">1</option>
                                                </select>
                                                <div class="input-group-addon cursor-pointer"><span class="glyphicon glyphicon-arrow-right"></span></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="mainHolder" class="row add-padding-top-2em">
                                    <div class="col-xs-12 text-small">
                                        <section>
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr id="registrantHeader"></tr>
                                                    <tr id="registrantHeaderAll">
                                                        <th>
                                                            Form <a tabindex="0" id="popover-records" class="help-info help-info-rsred"><span class="glyphicon glyphicon-info-sign"></span></a>
                                                            <div id="popover-records-content" style="display: none;">
                                                                <p>
                                                                    The report displays the form name, number of registrations, and form creation date. Click on the form name to view reports for that form.
                                                                </p>
                                                                <a href="~/Help/CloudFormReport">Go to Registration Report</a>
                                                            </div>
                                                        </th>
                                                        <th>
                                                            Registrations
                                                        </th>
                                                        <th>
                                                            Date Created
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody id="forms">
                                                    <tr>
                                                        <td><a>Annual Conference</a></td>
                                                        <td>2000</td>
                                                        <td>8/26/2014 4:45:37 PM</td>
                                                    </tr>
                                                    <tr>
                                                        <td><a>Fall Training Conference</a></td>
                                                        <td>1202</td>
                                                        <td>9/21/2014 9:14:03 AM</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End Work Area-->
                    </div>
                </div>
            </div>
            <!--End UI Markup-->
        </div>
        <div class="screen-shot-text screen-shot-footer">
            Click on <span class="glyphicon glyphicon-info-sign"></span> to read more about each section and function.
        </div>
    </div>
</div>





