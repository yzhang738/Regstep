@{
    Layout = "~/Views/Shared/_Layout_Help_Cloud.cshtml";
}
@section scripts {
    <script>
        $(function () {
            $("#popover-refund-balance").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Refund Balance',
                content: function () {
                    return $('#popover-refund-balance-content').html();
                }
            });
            $("#popover-refund-partial").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Partial Refund',
                content: function () {
                    return $('#popover-refund-partial-content').html();
                }
            });
            $("#popover-original").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Original Transaction',
                content: function () {
                    return $('#popover-original-content').html();
                }
            });
            $("#popover-balance").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Transaction Balance',
                content: function () {
                    return $('#popover-balance-content').html();
                }
            });
        });
    </script>
}
@section modals
{
    <div class="modal fade" id="partialRefund" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-header">
                <h3 class="modal-title">Partial Refund</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <span id="ammountToRefundError"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="control-label col-sm-3">Amount</label>
                    <div class="col-sm-9">
                        <input class="form-control input-sm" type="text" id="ammountToRefund" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" data-target="#partialRefund">Cancel</button>
                <button type="button" class="btn btn-default" id="refund">Refund</button>
            </div>
        </div>
    </div>  
}

