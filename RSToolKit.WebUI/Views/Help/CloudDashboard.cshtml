@{
    Layout = "~/Views/Shared/_Layout_Help_Cloud.cshtml";
}
@section scripts {
    <script>
        $(function () {
            $("#popover-not").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Notifications',
                content: function () {
                    return $('#popover-not-content').html();
                }
            });
            $("#popover-not-wl").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Waitlist Notifications',
                content: function () {
                    return $('#popover-not-wl-content').html();
                }
            });
            $("#popover-not-refund").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Refund Notifications',
                content: function () {
                    return $('#popover-not-refund-content').html();
                }
            });
            $("#popover-not-rs").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'RegStep Notifications',
                content: function () {
                    return $('#popover-not-rs-content').html();
                }
            });
            $("#popover-fav").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Favorite Reports',
                content: function () {
                    return $('#popover-fav-content').html();
                }
            });
            $("#popover-active").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Active Projects',
                content: function () {
                    return $('#popover-active-content').html();
                }
            });
            $("#popover-active-form").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Active Forms',
                content: function () {
                    return $('#popover-active-form-content').html();
                }
            });
            $("#popover-active-email").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Active Emails',
                content: function () {
                    return $('#popover-active-email-content').html();
                }
            });
            $("#popover-active-survey").popover({
                html: true,
                placement: 'top',
                trigger: 'focus',
                title: 'Active Surveys',
                content: function () {
                    return $('#popover-active-survey-content').html();
                }
            });
