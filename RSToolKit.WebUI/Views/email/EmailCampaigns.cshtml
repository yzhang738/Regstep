@using RSToolKit.Domain.Entities.Email;
@using RSToolKit.Domain.Entities;
@using RSToolKit.Domain;
@using System.Linq;
@model List<EmailCampaign>
@{
    Layout = "~/Views/Shared/_Layout_Email.cshtml";
}
@section styles
{
}
@section scripts
{
}
@section title
{
    Email Campaigns
}
@section breadcrumbs
{
}
<div class="col-xs-12">
    <div class="row add-padding-vertical-5 color-grey-2">
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="add-padding-vertical-5">
                <a href="@Url.Action("NewEmailCampaign", "Email")" data-xhr-method="post"><span class="glyphicon glyphicon-plus-sign"></span> New Email Campaign</a>
            </div>
        </div>

    </div>
</div>
<!--List Options-->
<!--Display-->
<div class="row add-padding-vertical-2em">
    <div id="mainHolder" class="col-xs-12 text-small">
        <!--End List Options-->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email Campaign</th>
                    <th>Description</th>
                    <th>Date Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hold in Model)
                {
                    var description = hold.Description.Length > 75 ? hold.Description.Substring(0, 75) + "..." : hold.Description;
                    <tr>
                        <td><a href="@Url.Action("EmailCampaign", "Email", new { id = hold.UId })"><span class="glyphicon glyphicon-edit"></span> @hold.Name</a></td>
                        <td>@description</td>
                        <td>@RSHtml.UserDateString((User)ViewBag.User, hold.DateCreated)</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>