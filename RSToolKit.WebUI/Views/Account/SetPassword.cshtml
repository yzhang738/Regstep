@using RSToolKit.WebUI.Infrastructure;
@using RSToolKit.Domain;
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.Owin;
@model PasswordResetModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Set Password</title>

    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="RegStep Technologies" />

    <!--CSS-->
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/2-regstep.min.css" rel="stylesheet" />
    <link href="~/Content/3-colors.min.css" rel="stylesheet" />
    <link href="~/Content/6-site.min.css" rel="stylesheet" />


    <!--Scripts-->
    <script type="text/javascript">
        var jsonAntiForgeryToken = '@Html.JsonAntiforgeryToken()';
    </script>

    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Bootstrap/Plugins/processing.js"></script>
    <script src="~/Scripts/Tool/extensions.js"></script>
    <script src="~/Scripts/Tool/restful.js"></script>
    <script src="/scripts/respond.js"></script>

    <script type="text/javascript">
    </script>

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <![endif]-->
</head>

<body style="background: white;">

    <!--Wrapper-->
    <div class="container-fluid">
        <!--Work Area-->
        <div class="container-fluid add-padding-vertical-4em">
            @using (Html.BeginForm("PasswordReset", "Account", FormMethod.Post, new { @class = "form", role = "form", data_xhr_method = "put", data_xhr_oncomplete = "inherit" }))
            {
                @Html.HiddenFor(m => m.UserId)
                @Html.HiddenFor(m => m.Token)
                <div class="row add-padding-vertical">
                    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 add-padding-bottom-5">
                        <img style="width: 200px;" src="~/images/common/regstep.png" alt="RegStep" />
                    </div>
                    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 color-1 text-color-white rounded-top text-medium add-padding-vertical-5">
                        Set Password
                    </div>
                    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 color-grey-2 rounded-bottom">
                        <div class="add-padding-vertical-5">
                            <label class="control-label">New Password:</label>
                            @Html.PasswordFor(m => m.Password, new { autocomplete = "off", @class = "form-control" })
                        </div>
                        <div class="add-padding-vertical-5">
                            <label class="control-label">Confirm New Password:</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { autocomplete = "off", @class = "form-control" })
                        </div>
                        <div class="add-padding-vertical">
                            <button type="submit" class="btn btn-default">Set Password</button>
                        </div>
                    </div>
                    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4" style="font-size: 10px;">
                        <div class="row">
                            <div class="col-xs-6">
                                &copy; 2013-@DateTime.UtcNow.Year RegStep Technologies
                            </div>
                            <div class="col-xs-6 text-align-right">
                                <a class="text-color-1" href="http://www.regstep.com">www.regstep.com</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!--End Work Area-->
    </div>
    <!--End Wrapper-->


    <div class="modal fade" id="processingModal" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-header">
                <h3>Processing...</h3>
            </div>
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                        <span class="sr-only">Processing</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>