@model RSToolKit.WebUI.Models.RegisterModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
@section scripts
{
    <script src="~/Scripts/jQuery/Plugins/formvalidate.js"></script>
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", data_validate = "true", @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-2">
            @Html.ValidationSummary()
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-2 control-label">@Html.LabelFor(m => m.Username)</label>
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", data_required = "true" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-2 control-label">@Html.LabelFor(m => m.Password)</label>
        <div class="col-sm-4">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", data_required = "true" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-2 control-label">@Html.LabelFor(m => m.Email)</label>
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", data_required = "true", data_validation = "email" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 col-sm-offset-4">
            <input type="submit" value="Register" class="btn btn-default" />
        </div>
    </div>
}

