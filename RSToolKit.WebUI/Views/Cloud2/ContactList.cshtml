@section styles
{
    <link href="~/Content/Bootstrap/datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/rating.css" rel="stylesheet" />
    <link href="~/Content/Tool/jTable.min.css" rel="stylesheet" />
    <style type="text/css">
        .report-qty-container {
            padding: 5px 0;
        }

        .report-qty {
            text-align: right;
            font-size: 12px;
        }

        @@media screen and (max-width: 991px) {
            .report-qty {
                text-align: left;
            }
        }

        .report-nav-container {
            background: #8e2828;
            padding-top: 2px;
            padding-left: 2px;
        }

        nav#report-nav {
            background: transparent;
        }

            nav#report-nav li.menu-header {
                font-weight: bold;
                text-decoration: underline;
                padding-left: 5px;
            }

            nav#report-nav ul > li > a {
                font-size: 1em;
            }

        .header-selection-window {
            padding: 0;
            font-size: 12px;
            margin-bottom: 15px;
        }

        .headers-container {
            margin-bottom: 0;
        }

        .headers-container-selected, .headers-container-available {
            padding: 5px;
            height: 500px;
            overflow-y: scroll;
        }

        .header-selection-buttons {
            padding-top: 200px;
            text-align: center;
        }

        @@media screen and (max-width: 991px) {
            .header-selection-window {
                margin-bottom: 0;
            }

            .headers-container-selected, .headers-container-available {
                height: auto;
                min-height: 50px;
                overflow-y: visible;
            }

            .header-selection-buttons {
                padding-top: 15px;
                padding-bottom: 15px;
            }
        }

        #m_save_files {
            border-bottom: 1px solid #ddd;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

        .report-file {
            cursor: pointer;
            padding: 5px;
        }

            .report-file:hover {
                background-color: rgba(128, 128, 128, .4);
            }

        .form-messagebox {
            color: red;
        }

        th.placeholder {
            background-color: transparent;
            color: red;
            position: relative;
            height: 100%;
            border: none;
        }

            th.placeholder:before {
                content: "∇";
                position: absolute;
                border: none;
            }

        #jTable_headerContext {
            background-color: white;
            padding: 5px;
            border: 1px solid #000;
            box-shadow: 10px 10px 5px #888888;
        }

        .labeled-chart-container {
            padding-right: 10px;
            border-right: 1px solid #ddd;
            min-height: 350px;
        }

        .canvas-holder {
            padding: 0 0;
            margin: 0 0;
        }

        canvas {
            width: 350px !important;
        }

        .legend {
            font-size: 12px;
        }

            .legend ul.pie-legend {
                padding-left: 0;
                margin-bottom: 0;
            }

            .legend li {
                display: block;
                position: relative;
                cursor: default;
                line-height: 16px;
                padding-left: 18px;
                margin: 3px 0;
                -webkit-transition: background-color 200ms ease-in-out;
                -moz-transition: background-color 200ms ease-in-out;
                -o-transition: background-color 200ms ease-in-out;
                transition: background-color 200ms ease-in-out;
            }

                .legend li:hover {
                    background-color: #fafafa;
                }

                .legend li span {
                    display: block;
                    position: absolute;
                    left: 0;
                    top: 0;
                    width: 16px;
                    height: 100%;
