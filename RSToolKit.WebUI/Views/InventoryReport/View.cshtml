@using System.Collections;
@using RSToolKit.Domain.Entities;
@using RSToolKit.Domain;
@using RSToolKit.Domain.Data.OldJsonData;
@model AdvancedInventoryReport
@{
    Layout = "~/Views/Shared/_L_Cloud.cshtml";
    ViewBag.Title = "RegStep Cloud - Inventory Report";
}
@section scripts
{
    <script src="~/Scripts/InventoryReport/inventoryReport.js"></script>
}
@section styles
{
}
@section title
{
    @Model.Name
}
@section crumbs {
    @Html.Partial("P_Trail", new TrailModel(ViewBag.Trail))
}
@section modals
{
}
<input type="hidden" id="report_id" value="@Model.SortingId" />
<div class="col-xs-12">
    <!--Options-->
    <div class="add-padding-bottom-5 text-medium text-color-2">
        Report Options
    </div>
    <div class="row add-padding-vertical-5 color-grey-2">

        <div class="col-sm-6 col-md-3 col-lg-2">
            <div class="add-padding-vertical-5">
                <a href="@Url.Action("Print", "InventoryReport", new { id = Model.UId }, Request.Url.Scheme)" target="_blank"><span class="glyphicon glyphicon-eye-open"></span> Full Page View</a>
            </div>
            <div class="add-padding-vertical-5">
                <a href="@Url.Action("CreateXcel", "InventoryReport", new { id = Model.UId }, Request.Url.Scheme)"><span class="glyphicon glyphicon-cloud-download"></span> Download</a>
            </div>
        </div>
        <div class="col-sm-6 col-md-3 col-lg-2">
            <div class="add-padding-vertical-5">
                <a href="@Url.Action("Get", "InventoryReport", new { id = Model.UId }, Request.Url.Scheme)"><span class="glyphicon glyphicon-edit"></span> Edit Report</a>
            </div>
            <div class="add-padding-vertical-5">
            </div>
        </div>
    </div>
    <!--End Options-->
    <!--Data-->
    <div id="mainHolder" class="row add-padding-vertical-2em">
        <div class="col-xs-12 text-small">
            <section>
                <table class="table table-striped table-registration-data" id="reportTable"></table>
            </section>
        </div>
    </div>
    <!--End Data-->
</div>