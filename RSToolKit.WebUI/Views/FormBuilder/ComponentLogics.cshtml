@using RSToolKit.Domain.Entities;
@model RSToolKit.Domain.Entities.Components.Component
@{
    Layout = "~/Views/Shared/_Layout_FormBuilder.cshtml";
}
@section scripts
{
    <script type="text/javascript">
        var formId = "@Model.UId";
    </script>
}
@section styles
{
}
@section title {
    Component / Item Logic
}
@section breadcrumbs {
    @Html.ActionLink("Forms", "Index", "FormBuilder")
    @if (Model is RSToolKit.Domain.Entities.Components.CheckboxItem)
    {
        var item = (RSToolKit.Domain.Entities.Components.CheckboxItem)Model;
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Panel.Page.Form.Name.Length < 20 ? item.Parent.Panel.Page.Form.Name : item.Parent.Panel.Page.Form.Name.Substring(0, 20)), "Form", "FormBuilder", new { id = item.Parent.Panel.Page.FormKey }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Panel.Page.Name.Length < 20 ? item.Parent.Panel.Page.Name : item.Parent.Panel.Page.Name.Substring(0, 20)), "Page", "FormBuilder", new { id = item.Parent.Panel.Page.UId }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Panel.Name.Length < 20 ? Model.Name : item.Parent.Panel.Name.Substring(0, 20)), "Panel", "FormBuilder", new { id = item.Parent.Panel.UId }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Name.Length < 20 ? Model.Name : item.Parent.Name.Substring(0, 20)), "Component", "FormBuilder", new { id = item.Parent.UId }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Name.Length < 20 ? Model.Name : item.Name.Substring(0, 20)), "Component", "FormBuilder", new { id = item.UId }, null)
    }
    else if (Model is RSToolKit.Domain.Entities.Components.RadioItem)
    {
        var item = (RSToolKit.Domain.Entities.Components.RadioItem)Model;
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Panel.Page.Form.Name.Length < 20 ? item.Parent.Panel.Page.Form.Name : item.Parent.Panel.Page.Form.Name.Substring(0, 20)), "Form", "FormBuilder", new { id = item.Parent.Panel.Page.FormKey }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Panel.Page.Name.Length < 20 ? item.Parent.Panel.Page.Name : item.Parent.Panel.Page.Name.Substring(0, 20)), "Page", "FormBuilder", new { id = item.Parent.Panel.Page.UId }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Panel.Name.Length < 20 ? Model.Name : item.Parent.Panel.Name.Substring(0, 20)), "Panel", "FormBuilder", new { id = item.Parent.Panel.UId }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Name.Length < 20 ? Model.Name : item.Parent.Name.Substring(0, 20)), "Component", "FormBuilder", new { id = item.Parent.UId }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Name.Length < 20 ? Model.Name : item.Name.Substring(0, 20)), "Component", "FormBuilder", new { id = item.UId }, null)
    }
    else if (Model is RSToolKit.Domain.Entities.Components.DropdownItem)
    {
        var item = (RSToolKit.Domain.Entities.Components.DropdownItem)Model;
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Panel.Page.Form.Name.Length < 20 ? item.Parent.Panel.Page.Form.Name : item.Parent.Panel.Page.Form.Name.Substring(0, 20)), "Form", "FormBuilder", new { id = item.Parent.Panel.Page.FormKey }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Panel.Page.Name.Length < 20 ? item.Parent.Panel.Page.Name : item.Parent.Panel.Page.Name.Substring(0, 20)), "Page", "FormBuilder", new { id = item.Parent.Panel.Page.UId }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Panel.Name.Length < 20 ? Model.Name : item.Parent.Panel.Name.Substring(0, 20)), "Panel", "FormBuilder", new { id = item.Parent.Panel.UId }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Parent.Name.Length < 20 ? Model.Name : item.Parent.Name.Substring(0, 20)), "Component", "FormBuilder", new { id = item.Parent.UId }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((item.Name.Length < 20 ? Model.Name : item.Name.Substring(0, 20)), "Component", "FormBuilder", new { id = item.UId }, null)
    }
    else
    {
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((Model.Panel.Page.Form.Name.Length < 20 ? Model.Panel.Page.Form.Name : Model.Panel.Page.Form.Name.Substring(0, 20)), "Form", "FormBuilder", new { id = Model.Panel.Page.FormKey }, null)
        <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((Model.Panel.Page.Name.Length < 20 ? Model.Panel.Page.Name : Model.Panel.Page.Name.Substring(0, 20)), "Page", "FormBuilder", new { id = Model.Panel.Page.UId }, null)
