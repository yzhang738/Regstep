@using RSToolKit.Domain.Entities;
@model RSToolKit.Domain.Entities.Form
@{
    Layout = "~/Views/Shared/_Layout_FormBuilder.cshtml";
}
@section scripts
{
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('Start');
        var formId = "@Model.UId";
    </script>
}
@section styles
{
}
@section title {
    Edit Header
}
@section breadcrumbs {
    @Html.ActionLink("Forms", "Index", "FormBuilder")
    <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> @Html.ActionLink((Model.Name.Length < 20 ? Model.Name : Model.Name.Substring(0, 20)), "Form", "FormBuilder", new { id = Model.UId }, null)
    <span class="glyphicon glyphicon-chevron-right glyphicon-small"></span> Header
}
@section modals
{
}
@using (Html.BeginForm("Start", "FormBuilder", FormMethod.Post, new { @class = "form", role = "form", data_xhr_method = "put" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UId)
    <div class="col-xs-12">
        <div class="add-padding-bottom-5 text-medium text-color-2">
            Header
        </div>
        <div>
            @Html.TextAreaFor(m => m.Start)
        </div>
        <div class="add-padding-vertical">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
}
