@using RSToolKit.Domain.Entities.Components;
@model RegistrationHtml
@{
    ViewBag.Title = Model.Form.Name;
    ViewBag.WrapperClass = "form-live";
    Layout = "~/Views/Shared/_Layout_Registration.cshtml";
}

@section pageNumber
{
    Registration Edits Closed
}
@section shoppingCart
{
}
@section header
{
    @Model.RenderHeader()
}
@section footer
{
    @Model.RenderFooter()
}
@section customStyles
{
    @Model.RenderFormStyle()
}
@section scripts
{
    <script src="~/Scripts/Bootstrap/Plugins/processing.js"></script>
    <script src="~/Scripts/Tool/restful.js"></script>
}
@Html.AntiForgeryToken()
<div class="row form-panel">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <h2>
                    Registration Edits Closed
                </h2>
                <p>
                    Registration edits are not currently allowed for this form. Please click the link below to view your confirmation. If you wish to make a change to your registration, please contact the event coordinator.
                </p>
                @Model.Form.CoordinatorName
                <br />@Model.Form.CoordinatorPhone
                <br /><a href="mailto:@Model.Form.CoordinatorEmail" target="_blank">@Model.Form.CoordinatorEmail</a> 
            </div>
        </div>
    </div>
</div>
<div class="row form-btn-panel">
    <div class="col-xs-12">
        <div class="row">
            <!--Button Nav Back-->
            <div class="col-sm-4 col-md-3 col-lg-2 form-btn">
                <a href="@Url.Action("ShowConfirmation", "Register", new { id = Model.Registrant.UId }, Request.Url.Scheme)">
                    View Confirmation Page
                </a>
            </div>
            <!--End Button Nav Back-->
        </div>
    </div>
</div>
<div class="modal fade" id="processingModal" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="background: white;">
        <div class="modal-header">
            <h3>Processing...</h3>
        </div>
        <div class="modal-body">
            <div class="progress">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                    <span class="sr-only">Processing</span>
                </div>
            </div>
        </div>
    </div>
</div>