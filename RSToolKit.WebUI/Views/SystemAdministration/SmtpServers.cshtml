@model List<RSToolKit.Domain.Entities.Email.SmtpServer>
@{
    ViewBag.Title = "RegStep Technologies - Smtp Servers";
}
<table class="table-striped table">
    <thead>
        <tr>
            <th colspan="3">
                <a href="@Url.Action("AddSmtpServer", "SystemAdministration", new { Company = ViewBag.Company })"><span class="glyphicon glyphicon-plus pull-left"></span></a>
            </th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Address</td>
                <td>
                    <div class="row">
                        @using (Html.BeginForm("EditSmtpServer", "SystemAdministration", FormMethod.Get, new { @class = "pull-left" }))
                        {
                            <input type="hidden" name="Company" value="@ViewBag.Company" />
                            <input type="hidden" name="UId" value="@s.UId" />
                            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-pencil"></span></button>
                        }
                        @using (Html.BeginForm("DeleteSmtpServer", "SystemAdministration", FormMethod.Post, new { @class = "pull-left" }))
                        {
                            <input type="hidden" name="Company" value="@ViewBag.Company" />
                            <input type="hidden" name="UId" value="@s.UId" />
                            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-trash"></span></button>
                        }

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>