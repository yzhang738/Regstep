@model RSToolKit.Domain.Entities.Email.SmtpServer
@{
    ViewBag.Title = "RegStep Technologies - Edit SmtpServer";
}
@section scripts
{
    <script src="~/Scripts/jQuery/Plugins/formvalidate.js"></script>
}
@using (Html.BeginForm("AddSmtpServer", "SystemAdministration", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UId)
    @Html.HiddenFor(m => m.Company)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.HiddenFor(m => m.DateModified)
    @Html.HiddenFor(m => m.ModificationToken)
    @Html.HiddenFor(m => m.ModifiedBy)
    @Html.HiddenFor(m => m.SortingId)
    <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
            @Html.ValidationSummary()
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-3 control-label">Name</label>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-3 control-label">Address</label>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", data_validation = "url" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-3 control-label">Port</label>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Port, new { @class = "form-control", data_validation = "int", data_errormessage = "The field must be a whole integer" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-3 control-label">Username</label>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-3 control-label">Password</label>
        <div class="col-md-4">
            <input id="Password" class="form-control" name="Password" type="password" placeholder="" data-required />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 col-md-offset-3 control-label">Use SSL</label>
        <div class="col-md-4">
            @Html.CheckBoxFor(m => m.SSL)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-5">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
}



